<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Fourxxi\ApiUserBundle\Entity\ConfirmationToken"
            table="api_user_confirmation_token"
            repository-class="Fourxxi\ApiUserBundle\Repository\ConfirmationTokenRepository">
        <indexes>
            <index name="credentials_index" columns="credentials"/>
        </indexes>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="credentials"/>

        <one-to-one field="user" target-entity="Symfony\Component\Security\Core\User\UserInterface"/>
    </entity>
</doctrine-mapping>